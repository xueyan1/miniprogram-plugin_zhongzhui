.xfdinfo_wapper{
  width:686rpx;
  padding:48rpx 0rpx;
  box-shadow:0px 6rpx 16rpx 0px rgba(0,0,0,0.06);
  border-radius:24rpx;
  background: #fff;
  margin: 0px auto;
}

.xfdinfo_wapper .title{
  width: 100%;display: flex;
  height: 48rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}
.xfdinfo_wapper .title .icon{
  display: block;width: 48rpx;
  height: 48rpx;
  margin-right: 4rpx;
}

.xfdinfo_wapper .title .txt{
  color:rgba(51,51,51,1);
  font-weight: 700;
  font-size:32rpx;
  width:172rpx;
  height:44rpx;
  text-align:center;
}
.xfdinfo_wapper .context{
  color:rgba(51,51,51,1);
  font-size: 30rpx;
  text-align:left;
  line-height:44rpx;
  margin-left:32rpx;
  width:622rpx;
}