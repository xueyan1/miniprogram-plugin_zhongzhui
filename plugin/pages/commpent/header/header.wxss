cover-view{
  visibility: visible;
}
cover-image{
  visibility: visible;
}
.navigation{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 9999;
}
.header {
  height: 44px;
  padding-left: 220rpx;
  padding-right: 220rpx;
  display: flex;
  align-items: center;
  box-sizing: content-box;
}
.header .left {
  position: absolute;
  left: 0;
  height: 44px;
  min-width: 46px;
  display: flex;
  align-items: center;
}

.back{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.back .iconfont {
  height: 36rpx;
  width: 22rpx;
}
.home {
  position: relative;
  width: 64rpx;
  height: 64rpx;
  margin-left: 32rpx;
  border-radius: 50%;
  overflow:hidden;
}
.home::after{
  position: absolute;
  content:'';
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.07);
}
.red-tip{
  position: relative;
}
.red-tip::after{
  position: absolute;
  z-index: 3;
  content:'';
  height: 16rpx;
  width: 16rpx;
  background: red;
  border-radius: 16rpx;
  right:0rpx;
  top:8rpx;
}
.home .img {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
  display: block;
}
.home .img-bak {
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: block;
}
.title {
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-family: PingFangSC-Medium;
  font-size: 38rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
}